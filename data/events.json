          {
            "template": "A rattlesnake bit {victim} while they were gathering firewood near {location}. Quick treatment with whiskey and prayer saved their life.",
            "severity_range": [6, 8],
            "effects": [{"type": "injury", "character": "victim", "value": 35}, {"type": "health_crisis", "character": "victim", "duration": 7}, {"type": "area_caution", "location": "location", "duration": 14}]
          }
