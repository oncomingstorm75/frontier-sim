{
  "metadata": {
    "version": "1.0",
    "description": "Comprehensive event database for Red Rock Territory frontier simulation",
    "total_events": 500,
    "categories": ["social", "economic", "environmental", "conflict", "supernatural", "technological"]
  },

  "event_categories": {
    "social": {
      "weight": 0.35,
      "subcategories": {
        "births_deaths": {
          "birth": [
            {
              "template": "{mother} gave birth to a healthy {gender} named {child_name} during the {season} season. The community celebrates with an impromptu feast at {location}.",
              "severity_range": [2, 5],
              "effects": [{"type": "population_increase", "value": 1}, {"type": "community_mood", "value": 10}],
              "requirements": {"female_settlers": 1, "age_range": [18, 40]}
            },
            {
              "template": "After a difficult labor lasting through the night, {mother} delivered {child_name} with {midwife} attending. The {weather} seemed to bless the new arrival.",
              "severity_range": [3, 6],
              "effects": [{"type": "population_increase", "value": 1}, {"type": "health_impact", "character": "mother", "value": -10}],
              "requirements": {"midwife_present": true}
            },
            {
              "template": "Tragedy struck when {mother} died in childbirth, leaving behind {child_name} and a grieving community. {father} now faces the challenge of raising the child alone.",
              "severity_range": [8, 10],
              "effects": [{"type": "population_change", "value": 0}, {"type": "community_mood", "value": -20}, {"type": "orphan_crisis", "value": true}],
              "probability": 0.15
            }
          ],
          "death": [
            {
              "template": "{character} passed away peacefully in their sleep at the age of {age}. The community gathered at {location} to remember their contributions to frontier life.",
              "severity_range": [4, 7],
              "effects": [{"type": "population_decrease", "value": 1}, {"type": "community_mood", "value": -8}],
              "requirements": {"age_minimum": 60}
            },
            {
              "template": "A mining accident at {location} claimed the life of {character}. Their family and fellow miners mourn the loss of a hardworking soul.",
              "severity_range": [7, 9],
              "effects": [{"type": "population_decrease", "value": 1}, {"type": "mining_safety_concern", "value": true}, {"type": "family_trauma", "value": true}],
              "requirements": {"occupation": "miner"}
            },
            {
              "template": "Disease took {character} despite the best efforts of {doctor}. The {illness} had been spreading through the settlement, claiming another victim.",
              "severity_range": [6, 8],
              "effects": [{"type": "population_decrease", "value": 1}, {"type": "health_crisis", "value": true}, {"type": "fear_spread", "value": 5}],
              "requirements": {"disease_outbreak": true}
            }
          ]
        },
        "relationships": {
          "marriage": [
            {
              "template": "{bride} and {groom} were married in a beautiful ceremony at {location}. The whole settlement turned out to celebrate the union with dancing and feasting.",
              "severity_range": [4, 6],
              "effects": [{"type": "community_mood", "value": 15}, {"type": "relationship_bond", "characters": ["bride", "groom"], "value": 100}],
              "requirements": {"single_adults": 2}
            },
            {
              "template": "Despite opposition from {bride}'s family, {bride} and {groom} eloped in a simple ceremony. The controversial marriage has divided the community.",
              "severity_range": [5, 7],
              "effects": [{"type": "community_division", "value": true}, {"type": "family_conflict", "value": true}],
              "probability": 0.3
            }
          ],
          "conflict": [
            {
              "template": "A heated argument between {character1} and {character2} over {dispute_cause} nearly came to blows at {location}. Other settlers had to intervene to keep the peace.",
              "severity_range": [3, 6],
              "effects": [{"type": "relationship_damage", "characters": ["character1", "character2"], "value": -25}, {"type": "community_tension", "value": 5}],
              "variables": {"dispute_cause": ["land boundaries", "water rights", "livestock", "business dealings", "family honor"]}
            },
            {
              "template": "The long-standing feud between {character1} and {character2} erupted into violence when {character1} accused {character2} of {accusation}.",
              "severity_range": [6, 8],
              "effects": [{"type": "violence_incident", "value": true}, {"type": "injury", "character": "random", "value": 15}, {"type": "law_enforcement_needed", "value": true}],
              "variables": {"accusation": ["cheating at cards", "claim jumping", "cattle rustling", "courting their daughter", "spreading lies"]}
            }
          ]
        }
      }
    },

    "economic": {
      "weight": 0.25,
      "subcategories": {
        "mining": {
          "discovery": [
            {
              "template": "{prospector} struck a rich vein of copper ore in {location}! Word spread quickly, and claim stakes appeared overnight as the mining rush began.",
              "severity_range": [6, 8],
              "effects": [{"type": "resource_discovery", "resource": "copper", "value": 200}, {"type": "population_attraction", "value": 15}, {"type": "land_speculation", "value": true}],
              "requirements": {"location_type": "mining_area"}
            },
            {
              "template": "While panning for gold near {location}, {prospector} found nothing but fool's gold and broken dreams. Another day, another disappointment in the mines.",
              "severity_range": [2, 4],
              "effects": [{"type": "mood_impact", "character": "prospector", "value": -10}, {"type": "time_wasted", "value": true}]
            },
            {
              "template": "{prospector} discovered traces of silver in the abandoned mine shaft at {location}. The find isn't rich, but it's enough to keep hope alive.",
              "severity_range": [4, 6],
              "effects": [{"type": "resource_discovery", "resource": "silver", "value": 50}, {"type": "mining_activity_increase", "value": 20}]
            }
          ],
          "accident": [
            {
              "template": "A cave-in at {location} trapped {miner} for hours before rescue efforts freed them. Mining safety concerns grow among the workers.",
              "severity_range": [6, 8],
              "effects": [{"type": "injury", "character": "miner", "value": 25}, {"type": "mining_productivity", "value": -15}, {"type": "safety_regulations_needed", "value": true}]
            },
            {
              "template": "Gas buildup in the {location} mine caused an explosion, injuring {miner} and {helper}. The incident highlights the dangers of frontier mining.",
              "severity_range": [7, 9],
              "effects": [{"type": "injury", "character": "miner", "value": 30}, {"type": "injury", "character": "helper", "value": 20}, {"type": "mining_shutdown", "location": "location", "duration": 7}]
            }
          ]
        },
        "trade": [
          {
            "template": "A merchant caravan arrived from {origin_city} with supplies desperately needed by the settlement. Prices are high, but goods are available.",
            "severity_range": [3, 5],
            "effects": [{"type": "resource_availability", "value": true}, {"type": "price_inflation", "value": 1.3}, {"type": "community_mood", "value": 8}],
            "variables": {"origin_city": ["San Francisco", "Denver", "Santa Fe", "Fort Worth", "St. Louis"]}
          },
          {
            "template": "The trading post at {location} burned down, destroying valuable supplies and disrupting commerce. {trader} lost everything in the blaze.",
            "severity_range": [7, 9],
            "effects": [{"type": "building_destruction", "building": "trading_post"}, {"type": "resource_loss", "resource": "trade_goods", "value": 150}, {"type": "economic_disruption", "duration": 30}]
          }
        ]
      }
    },

    "environmental": {
      "weight": 0.20,
      "subcategories": {
        "weather": [
          {
            "template": "A fierce blizzard swept through Red Rock Territory, trapping residents indoors for days. Snow drifts reached the rooftops in some areas.",
            "severity_range": [6, 9],
            "effects": [{"type": "resource_consumption", "resource": "food", "value": 40}, {"type": "resource_consumption", "resource": "wood", "value": 60}, {"type": "isolation", "duration": 3}],
            "requirements": {"season": "winter"}
          },
          {
            "template": "A drought has settled over the territory. Wells are running low, and the {river_name} has dropped to dangerous levels.",
