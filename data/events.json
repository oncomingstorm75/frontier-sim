          {
            "template": "Wolves have been spotted near the livestock pens. {rancher} reported losing two calves to the pack last night.",
            "severity_range": [4, 6],
            "effects": [{"type": "livestock_loss", "value": 2}, {"type": "predator_problem", "value": true}, {"type": "guard_duty_needed", "duration": 14}]
