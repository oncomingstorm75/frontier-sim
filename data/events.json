            "effects": [{"type": "water_shortage", "value": true}, {"type": "crop_failure", "value": 0.6}, {"type": "livestock_stress", "value": true}],
            "requirements": {"season": ["summer", "fall"]}
          },
          {
            "template": "Flash floods from spring melts turned {location} into a raging torrent. {character} barely escaped when their cabin was swept away.",
